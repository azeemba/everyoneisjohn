    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "quickstring": "^1.1.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-redux": "^7.0.2",
    "react-router": "^5.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "scriba": "^1.0.5",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "uuid": "^3.3.2"
  },
  "pre-commit": [
    "lint:soft"
  ],
  "xo": {
    "parser": "babel-eslint",
    "space": true,
    "extends": [
      "xo-react/space",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "babel",
      "flowtype"
    ],
    "rules": {
      "babel/semi": true
    },
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "browser",
      "node"
    ],
    "ignore": [
      "static/javascripts/**/*.js"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "require": [
      "@babel/register",
      "@babel/polyfill",
      "./test/helpers/setup-jsdom",
      "./test/helpers/setup-enzyme"
    ]
  }
}
